<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbcc"
    android:id="@+id/activity_loading"
    tools:context="org.androidtown.myapplication.LoadingActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/imageView"
            android:gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textStyle="bold"
            android:text="Healing Jeonnam"/>

        <TextView
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전남에서 자연을 만나다"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:indeterminateDrawable="@drawable/circul_progressbar"
        android:layout_gravity="center_horizontal|bottom">
    </ProgressBar>

</FrameLayout>
